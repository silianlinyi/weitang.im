    <% include ./inc_topmenu.ejs %>

    <div class="ui page grid mainpage">
        <div class="four wide column">
            <% include ./inc_setting_nav.ejs %>
        </div>
        <div class="twelve wide column">
            <div class="ui raised form segment">
            	
            	<div class="ui black huge ribbon label">重置密码</div>
            	
            	<div class="inline field"></div>
            	<div class="inline field">
					<label>旧密码：</label>
					<input type="password" id="oldPassword" />
